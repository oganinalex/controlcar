<div class="page-header">
    <h3>Всего - {{ actsCount }}</h3>
</div>

<table class="table table-striped table-bordered" data-provides="rowlink">
    <thead>
    <tr>
        <th>#</th>
        <th>Дата</th>
        <th>№ Акта, маршрут</th>
        <th>Тип груза</th>
        <th>Авто</th>
        <th colspan="3">Действие</th>
    </tr>
    </thead>
    <tbody>
    {% for act in acts %}
        <tr>
            <td><a href="{{ path('controlcar_journal_show_act', {id:  act.id }) }}">{{ loop.index + pageCoeficient }}</a></td>
            <td>{{ act.date|date("d.m.Y")  }}</td>
            <td>№{{ act.name }}, {{ act.DeparturePlace }}  <span class="glyphicon glyphicon-arrow-right"></span> {{ act.DestinationPlace }}</td>
            <td>{{ act.CargoType}}</td>
            <td>{{ act.car.name }}</td>
            <td>
                <a href="{{ path('controlcar_dublicate_act', {id:  act.id }) }}"><span class="glyphicon glyphicon-plus"></span></a>&nbsp;&nbsp;
                <a href="{{ path('controlcar_journal_edit_act', {id:  act.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>&nbsp;&nbsp;
                <a href="{{ path('controlcar_journal_delete_act', {id:  act.id }) }}"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {#{{ knp_pagination_render(acts) }}#}
</div>
{{ knp_pagination_render(acts, "", {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}

