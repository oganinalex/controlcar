{% extends 'ControlcarJournalBundle::mainControlcar.html.twig' %}

{% block content %}
    <table class="table table-striped table-bordered" data-provides="rowlink">
        <caption>Acts</caption>
        <thead>
        <tr>
            <th>#</th>
            <th>head 1</th>
            <th>head 2</th>
            <th colspan="3">actions</th>
        </tr>
        </thead>
        <tbody>
        {% for act in pagination %}
            <tr>
                <td><a href="{{ path('controlcar_journal_show_act', {id:  act.id }) }}">{{ loop.index }}</a></td>
                <td>{{ act.name }}</td>
                <td>{{ act.car.name }}</td>
                <td class="nolink"><a href="{{ path('controlcar_dublicate_act', {id:  act.id }) }}"> <i class="icon-share"></i> </a></td>
                <td class="nolink"><a href="{{ path('controlcar_journal_edit_act', {id:  act.id }) }}"> <i class="icon-pencil"></i> </a></td>
                <td class="nolink"><a href="{{ path('controlcar_journal_delete_act', {id:  act.id }) }}"> <i class="icon-remove"></i> </a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
