            this is footer
        </footer>
    {% endblock %}

</div>
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@ControlcarJournalBundle/Resources/public/js/jquery-1.10.2.min.js'
    '@ControlcarJournalBundle/Resources/public/js/bootstrap.js'
    '@ControlcarJournalBundle/Resources/public/js/bootstrap-rowlink.js'
